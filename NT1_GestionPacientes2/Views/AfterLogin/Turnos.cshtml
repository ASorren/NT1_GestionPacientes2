@model IEnumerable<NT1_GestionPacientes2.Models.Turno>
@{
    ViewData["Title"] = "Turnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Turnos</h1>



<h1 class="text-center">Crud De Turnos wacho</h1>
<div class="row">
    <div class="col-12">

        <div class="float-right">
            <a asp-action="CreateTurn" asp-controller="AfterLogin" class="btn btn-success"> Ingresar Turno</a>
        </div>

    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border">
                <div class="card-header">
                    <h3 class="col-12"><strong>Lista de Turnos</strong></h3>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <!--usamos asp para la logica, si hay modelos hacer tal cosa -->

                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="TurnsTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <!-- cabeceras de la tabla -->
                                    <th>@Html.DisplayNameFor(m => m.nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.horario)</th>
                                    <th>@Html.DisplayNameFor(m => m.tipoConsulta)</th>
                                    <th>@Html.DisplayNameFor(m => m.obraSocial)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                // recorrer registros de base de datos
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.nombre)</td>
                                        <td>@Html.DisplayFor(m => item.horario)</td>
                                        <td>@Html.DisplayFor(m => item.tipoConsulta)</td>
                                        <td>@Html.DisplayFor(m => item.obraSocial)</td>
                                        <td>
                                            <!-- botones del abm la ruta especifica el id del elemento -->
                                            <a class="btn btn-primary" asp-action="Edit" asp-all-route-id="@item.id">Editar </a>
                                            <a class="btn btn-info" asp-action="Details" asp-all-route-id="@item.id">Detalles </a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-all-route-id="@item.id">Eliminar </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    }
                    else
                    {
                        <p>No hay registros </p>
                    }

                </div>

            </div>

        </div>

    </div>

</div>

@section Scripts{
    <script>
        // llamamos a datatable con jquery

        $(document).ready(function () {
            $('#TurnsTable').DataTable({

            });
        });

    </script>
}
